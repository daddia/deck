{
  "name": "deck-typescript",
  "version": "4.0.2",
  "description": "Typescript Integration for deck",
  "keywords": [
    "deck",
    "presentation",
    "slides",
    "slideshow",
    "NextJs"
  ],
  "homepage": "https://deck.daddia.com",
  "repository": "github:daddia/deck",
  "license": "MIT",
  "author": "daddia",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ui": {
      "import": "./dist/ui/index.js",
      "types": "./dist/ui/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "reset": "rm -rf dist node_modules .turbo"

  },
  "dependencies": {
    "estree-util-value-to-estree": "^3.3.3",
    "fast-glob": "^3.3.3",
    "hast-util-to-estree": "^3.1.3",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "remark": "^15.0.1",
    "remark-rehype": "^11.1.2",
    "shiki": "^3.2.2",
    "ts-morph": "^25.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "@types/estree": "^1.0.7",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.3",
    "@types/node": "22.14.1",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "eslint-config-custom": "workspace:*",
    "deck-core": "workspace:*",
    "deck-ui": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "^5.8.3",
    "unified": "^11.0.5"
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
