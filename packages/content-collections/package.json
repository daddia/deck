{
  "name": "@deck/content-collections",
  "version": "0.1.0",
  "description": "The Content Collections adapter for deck",
  "keywords": [
    "deck",
    "presentation",
    "slides",
    "slideshow",
    "NextJs"
  ],
  "homepage": "https://deck.daddia.com",
  "repository": "github:daddia/deck",
  "license": "MIT",
  "author": "daddia",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./configuration": {
      "import": "./dist/configuration.js",
      "types": "./dist/configuration.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "reset": "rm -rf dist node_modules .turbo"
  },
  "devDependencies": {
    "@content-collections/core": "^0.8.2",
    "@content-collections/mdx": "^0.2.2",
    "@types/node": "22.14.1",
    "@repo/eslint-config": "workspace:*",
    "deck-core": "workspace:*",
    "tsconfig": "workspace:*",
    "unified": "^11.0.5",
    "zod": "^3.24.3"
  },
  "peerDependencies": {
    "@content-collections/core": "0.x.x",
    "@content-collections/mdx": "0.x.x",
    "deck-core": "^14.0.0 || ^15.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
